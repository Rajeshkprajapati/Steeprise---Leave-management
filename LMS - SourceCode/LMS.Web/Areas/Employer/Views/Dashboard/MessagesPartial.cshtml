<div class="dashboard-content">
    <!-- Titlebar -->
    <div id="titlebar">
        <div class="row">
            <div class="col-md-12">
                <h2>Messages</h2>
                <!-- Breadcrumbs -->
                <nav id="breadcrumbs">
                    <ul>
                        <li><a href="javascript:void(0)">Home</a></li>
                        <li><a href="javascript:void(0)">Dashboard</a></li>
                        <li>Message</li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12">
            <div class="messages-container margin-top-0">
                <div class="messages-headline">
                    <div class="row">
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                            <h4>Inbox</h4>
                        </div>
                        @*<a href="#" class="message-action"><i class="fa fa-delete"></i> Delete Conversation</a>*@
                        <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
                            <div class="input-group">
                                <input type="text" required id="dateToFilterMessages" readonly class="message-action">
                                <div class="input-group-addon">
                                    <a href="javascript:void(0)" onclick="toggleCalendar()">
                                        <i class="fa fa-calendar" aria-hidden="true"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="dashboard-list-box margin-top-30">
                    <div class="dashboard-list-box-content">
                        <!-- Table -->
                        <table class="manage-table responsive-table">

                            <tr>
                                <th>
                                    Sender
                                </th>
                                <th>
                                    Email
                                </th>
                                <th>
                                    Contact No
                                </th>
                                <th>Action</th>
                            </tr>

                            <!-- Item #1 -->
                            @if (Model.Count() > 0)
                            {
                                @foreach (var sender in Model)
                                {
                                    <tr>
                                        <td>
                                            @sender.SenderFullName
                                        </td>
                                        <td>
                                            @sender.SenderEmail
                                        </td>
                                        <td>
                                            @sender.SenderMobile
                                        </td>
                                        <td>
                                            @if (sender.IsReplied)
                                            {
                                                <span>Replied</span>
                                            }
                                            else
                                            {
                                                <a id="btnToReplyPrompt" href="javascript:void(0);" onclick="getReplyPrompt(@JsonConvert.SerializeObject(sender))">Reply</a>
                                            }
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="4">No data to display</td>
                                </tr>
                            }

                        </table>
                    </div>
                </div>

            </div>
        </div>
    </div>

</div>