@model LMS.Model.DataViewModel.Shared.UserViewModel

<div class="dashboard-content">
    <!-- Titlebar -->
    <div id="titlebar">
        <div class="row">
            <div class="col-md-12">
                <h2>My Profile</h2>
                <!-- Breadcrumbs -->
                <nav id="breadcrumbs">
                    <ul>
                        <li>Home</li>
                        <li>Dashboard</li>
                        <li>My Profile</li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- Profile -->
        <div class="col-lg-6 col-md-12">
            <div class="dashboard-list-box margin-top-0">
                <h4 class="gray">Profile Details</h4>
                <div class="dashboard-list-box-static">

                    <form id="empProfile">
                        <!-- Avatar -->
                        <div class="edit-profile-photo">
                            @if (!string.IsNullOrEmpty(Model.ProfilePic))
                            {
                                <img src="@Model.ProfilePic" alt="">
                            }
                            else
                            {
                                <img src="https://www.gravatar.com/avatar/00000000000000000000000000000000?d=mm&amp;s=300" alt="">
                            }
                            <div class="change-photo-btn">
                                <div class="photoUpload">
                                    <span><i class="fa fa-upload"></i> Upload Photo</span>
                                    <input type="file" id="profilepic" name="ImageFile" class="upload" />
                                </div>
                            </div>
                        </div>

                        <!-- Details -->
                        <div class="my-profile">
                            <label for="Company Name">CompanyName</label>
                            <input type="text" name="CompanyName" value="@Model.CompanyName" placeholder="Company name">

                            <label for="FirstName">Your Name</label>
                            <input type="text" name="Fullname" value="@Model.FullName" placeholder="Your name">


                            <label for="MobileNo">Phone</label>
                            <input type="text" name="MobileNo" value="@Model.MobileNo" placeholder="Your Phone number">

                            <label>Email</label>
                            <input type="text" name="Email" readonly value="@Model.Email" placeholder="Email Address">

                            <label>Address</label>
                            <input type="text" name="Address" value="@Model.FullAddress" placeholder="Enter Addreess">
                            <!-- <label>Notes</label>
                            <textarea name="notes"  id="notes" cols="30" rows="10"></textarea>

                            <label><i class="fa fa-twitter"></i> Twitter</label>
                            <input placeholder="https://www.twitter.com/" type="text">

                            <label><i class="fa fa-facebook-square"></i> Facebook</label>
                            <input placeholder="https://www.facebook.com/" type="text">

                            <label><i class="fa fa-google-plus"></i> Google+</label>
                            <input placeholder="https://www.google.com/" type="text"> -->
                        </div>

                        <input type="submit" onclick="return UpdateEmpDetail()" class="button margin-top-15" value="Save Changes" />
                    </form>
                </div>
            </div>
        </div>
        <!-- Change Password -->
        <div class="col-lg-6 col-md-12">
            <div class="dashboard-list-box margin-top-0">
                <h4 class="gray">Change Password</h4>
                <div class="dashboard-list-box-static">
                    <form id="PasswordForm" oninput='ConfirmPassword.setCustomValidity(ConfirmPassword.value != Password.value ? "Passwords do not match." : "")'>
                        <!-- Change Password -->
                        <div class="my-profile">
                            <label class="margin-top-0">Current Password</label>
                            <input type="password" required name="OldPassword">
                            <label>New Password</label>
                            <input type="password" required name="Password">
                            <label>Confirm New Password</label>
                            <input type="password" required name="ConfirmPassword">
                            <button type="submit" onclick="return changePassword()" class="button margin-top-15" >Change Password</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>

    </div>
</div>

<script src="~/js/Employer/Profile/empProfile.js"></script>
