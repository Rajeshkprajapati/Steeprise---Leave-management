@using LMS.Model.DataViewModel.JobSeeker
@model JobSeekerDashboardSummary
<div id="titlebar">
    <div class="row">
        <div class="col-md-12">
            <h2>Job Applied</h2>
            <!-- Breadcrumbs -->
            <nav id="breadcrumbs">
                <ul>
                    <li><a href="#">Home</a></li>
                    <li><a href="/JobSeekerManagement/Dashboard">Dashboard</a></li>
                    <li>Job Applied</li>
                </ul>
            </nav>
        </div>
    </div>
</div>
<div class="row">

    <!-- Table-->
    <div class="col-lg-12 col-md-12">
        <div class="dashboard-list-box margin-top-0">
            <div class="dashboard-list-box-content">
                <!-- Table -->
                <table class="manage-table resumes responsive-table">
                    <tr>
                        <th><i class="fa fa-file-text"></i> Job Title</th>
                        <th><i class="fa fa-tags"></i> Company</th>
                        <th><i class="fa fa-map-marker"></i> Location</th>
                        <th><i class="fa fa-clock-o"></i> CTC</th>
                        <th><i class="fa fa-calendar"></i> Date</th>
                        @*<th><i class="fa fa-calendar"></i> Days</th>*@
                        <th></th>
                    </tr>
                    <!-- Item #1 -->
                    @if (ViewBag.Appliedjob != null && Enumerable.Count(ViewBag.Appliedjob)>0)
                    {
                        foreach (var item in ViewBag.Appliedjob)
                        {
                            <tr>
                                <td class="alert-name">@item.JobTitle</td>
                                <td>@item.CompanyName</td>
                                <td>@item.City</td>
                                <td>@item.CTC</td>
                                <td>@item.CreatedDate</td>
                                @*<td>@item.NumberOfDays&#8203;d ago</td>*@
                                <td class="action">
                                    <a onclick="DeleteAppliedJob(@item.JobPostId)" class="delete"><i class="fa fa-remove"></i> Delete</a>
                                </td>
                            </tr>

                        }

                    }
                    else {
                        <tr><td>No data available!</td></tr>
                    }

                </table>
            </div>
        </div>
    </div>

    <!-- Copyrights -->
    <div class="col-md-12">
        <div class="copyrights">© 2019 WorkScout. All Rights Reserved.</div>
    </div>
</div>
