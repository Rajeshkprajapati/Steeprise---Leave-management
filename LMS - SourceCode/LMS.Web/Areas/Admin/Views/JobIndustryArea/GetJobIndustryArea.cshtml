@model IEnumerable<LMS.Model.DataViewModel.Admin.JobIndustryArea.JobIndustryAreaViewModel>
@{
    ViewData["Title"] = "Job Industry Area";
}
<link href="~/lib/datatable/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="~/css/Loader.css" rel="stylesheet" />

<!-- Page Title start -->
<div class="pageTitle">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <h1 class="page-heading">Manage Job Industry</h1>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="breadCrumb"><a href="/Home/Index/">Home</a> / <span>Admin</span></div>
            </div>
        </div>
    </div>
</div>

<!-- Page Title End -->
<div class="container" style="padding-top:20px;padding-bottom:170px;">
    <div class="row">
        <div class="col-sm-12">
            <div class="col-md-3">
                <h4> Job Industry List </h4>
            </div>
            <div class="col-md-9">
                <button type="submit" class="btn btn-primary btn-sm pull-right" id="AddNew" 
                        style="margin-bottom:10px;" data-toggle="modal" data-name="" data-target="#PopUpModal" onclick="AddNew()">Add New</button>
            </div>
        </div>
        <div class="col-md-12 table-responsive borderonScreen">
            <table class="table table-striped table-bordered dt-responsive nowrap" id="dataTable">
                <thead>
                    <tr>
                        <th>Sr. No.</th>
                        <th hidden>Job Industry Area Id </th>
                        <th>Job Industry Name</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var jobIndustryArea in Model)
                    {
                        <tr>
                            <td>@jobIndustryArea.SerialNo</td>
                            <td hidden>@jobIndustryArea.JobIndustryAreaId</td>
                            <td>@jobIndustryArea.JobIndustryAreaName</td>
                            <td class="tableButtonCenter">
                                <button type="submit" class="btn btn-success btn-sm editbtn" data-toggle="modal" data-name="" data-target="#PopUpModal" onclick="edit(this)">Edit</button>
                                <button type="submit" class="btn btn-danger btn-sm" onclick="ConfrimationDeleteMessage(@jobIndustryArea.JobIndustryAreaId)">Delete</button>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Modal -->
<div class="modal fade customModelPopup" id="PopUpModal" tabindex="-1" role="dialog" aria-labelledby="PopUpModalLabel">
    <div class="modal-dialog ModelDialog" role="document">

        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="PopUpModalLabel">Edit Record</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="form-group col-md-6" hidden>
                        <label for="first-name" class="control-label" style="padding-bottom:10px;">Record Id </label>
                        <input type="text" class="form-control" id="JobIndustryAreaId">
                    </div>
                </div>
                <div class="row" style="margin-top: auto;">
                    <div class="form-group col-md-6">
                        <label for="first-name" class="control-label" style="padding-bottom:10px;">Job Industry Name</label>
                        <input type="text" class="form-control" id="JobIndustryAreaName" required>
                    </div>
                </div>
            </div>
            <div class="modal-footer footerModel">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" id="Update" class="btn btn-primary" onclick="Updatedata()">Update</button>
                <button type="button" id="SaveRec" class="btn btn-primary" onclick="Updatedata()">Add New</button>
            </div>
        </div>

    </div>
</div>



@section Scripts
    {
    <script src="~/lib/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatable/js/dataTables.bootstrap4.min.js"></script>
    <script src="~/js/Admin/JobIndustryArea/JobIndustryArea.js"></script>
}