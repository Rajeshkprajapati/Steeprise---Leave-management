@model IEnumerable<LMS.Model.DataViewModel.Shared.UserViewModel>
@{
    ViewData["Title"] = "User's Registration";
}

<link href="~/lib/datatable/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<!-- Page Title start -->
<div class="pageTitle">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <h1 class="page-heading">Admin Area</h1>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="breadCrumb"><a href="/Home/Index/">Home</a> / <span>Admin</span></div>
            </div>
        </div>
    </div>
</div>
<!-- Page Title End -->
<div class="container" style="padding-top:20px;padding-bottom:170px;">
    <div class="row">

        <div class="col-md-12" align="center">
            <h4>@ViewData["Title"]</h4>
            <hr />
        </div>
        <div class="col-md-12 table-responsive">
            <table class="table table-striped table-bordered dt-responsive nowrap" id="allRegisterdDataTable">
                <thead>
                    <tr>
                        @*<th style="display:none">#</th>*@
                        <th>Name</th>
                        <th>Email</th>
                        <th>Mobile No.</th>
                        <th>City</th>
                        <th>State</th>
                        @*<th>Country</th>*@
                        <th>Gender</th>
                        <th>Role</th>
                        <th>Created Date</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            @*<td style="display:none">@user.Userid</td>*@
                            <td>@user.FullName</td>
                            <td>@user.Email</td>
                            <td>@user.MobileNo</td>
                            <td>@user.City</td>
                            <td>@user.State</td>
                            <td>@user.Gender</td>
                            <td>@user.RoleName</td>
                            <td>@user.CreatedDate.ToString("MM/dd/yyyy")</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
@section Scripts
    {

    <script src="~/lib/datatable/js/jquery.dataTables.min.js"></script>
    <script src="~/lib/datatable/js/dataTables.bootstrap4.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.1/js/dataTables.buttons.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
    <script src="https://cdn.datatables.net/buttons/1.6.1/js/buttons.html5.min.js"></script>
    <script>
        $(document).ready(function () {

            $('#allRegisterdDataTable').dataTable({
                "order": [],
                dom: 'Bfrtip',
                buttons: [
                    'excel'
                ]
            });

            let tb = $('#allRegisterdDataTable').DataTable();
            if (!tb.data().count()) {
                $('#allRegisterdDataTable').dataTable().fnDestroy();
                $('#allRegisterdDataTable').DataTable({
                    searching: false
                })
            } else {
                $('span').html('Export Data');
                $('button').addClass("btn btn-primary");
                $('button').addClass("exportDataTablBtn");
            }
        });
    </script>
}