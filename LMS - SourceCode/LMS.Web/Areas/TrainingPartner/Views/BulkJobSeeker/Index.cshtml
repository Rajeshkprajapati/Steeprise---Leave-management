
@{
    ViewData["Title"] = "Bulk Candidate Upload";
}
<link href="~/css/fileUploadControl.css" rel="stylesheet" />
<div class="pageTitle">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <h1 class="page-heading">@ViewData["Title"]</h1>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="breadCrumb"><a href="/Home/Index/">Home</a> / <span>@ViewData["Title"]</span></div>
            </div>
        </div>
    </div>
</div>

<div class="listpgWraper">
    <div class="col-sm-12">
        <form asp-action="UploadJobSeekers" method="post" onsubmit="return uploadJobSeekers(this)" enctype="multipart/form-data">
            <div class="col-sm-offset-4 frame">
                <div class="col-sm-5 center">
                    <div asp-validation-summary="All" style="color:red;font-weight:bold;">
                    </div>
                    <label id="message" style="color:red;font-weight:bold;padding-top: 10px;"></label>
                    <br />
                    <div class="title">
                        <h5>Drop file to upload</h5>
                        <span class="template-download-link-container">
                            <a asp-action="DownloadTemplate">Download Template</a>
                        </span>
                    </div>
                    <div class="dropzone">
                        <p>Click or drag on bulk upload portion</p>
                        <h1 class="imgupload"><i class="fa fa-file-excel-o"></i></h1>
                        <input type="file" name="files" class="upload-input" onchange="fileSelected(this)" />
                    </div>
                    <label id="fileName" style="font-weight:bold;text-align:center;margin-bottom:5px;margin-top:5px;"></label>
                    <button type="submit" class="UploadFilebtn" name="uploadbutton">Upload file</button>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts
    {
    <script src="~/js/TrainingPartner/bulkJobSeekersUpload.js"></script>
}
