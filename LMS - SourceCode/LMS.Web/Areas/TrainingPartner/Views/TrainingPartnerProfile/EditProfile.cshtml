@using LMS.Model.DataViewModel.Shared
@model UserViewModel

@{
    ViewData["Title"] = "Edit Profile";
}
<link href="~/css/TP/profile.css" rel="stylesheet" />
<!-- Page Title start -->
<div class="pageTitle">
    <div class="container">
        <div class="row">
            <div class="col-md-6 col-sm-6">
                <h1 class="page-heading">@ViewData["Title"]</h1>
            </div>
            <div class="col-md-6 col-sm-6">
                <div class="breadCrumb">
                    <a href="/Home/Index/">Home</a> /
                    <span>Welcome to @ViewData["Title"]</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Page Title End -->

<div class="listpgWraper">
    <div class="container">
        <div class="row">
            <div class="row col-md-offset-2 col-md-8 edit-profile-container" style="background:white">
                <form asp-action="UpdateTPDetail" enctype="multipart/form-data">
                    <div asp-validation-summary="All" style="color:green;font-weight:bold;text-align:center">
                    </div><br />
                    <input type="hidden" name="UserId" value="@Model.UserId" />
                    <div class="form-group row">
                        <label class="col-md-2" for="tpId">Training Partner Id</label>
                        <div class="col-sm-10">
                            <input type="text" required readonly class=" form-control" name="CandidateId" value="@Model.CandidateId" id="tpId" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2" for="fName">First Name</label>
                        <div class="col-sm-10">
                            <input type="text" required class=" form-control" name="FirstName" pattern="^[a-zA-Z]+$" title="Only alphabet allow" value="@Model.FirstName" id="fName" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2" for="lName">Last Name</label>
                        <div class="col-sm-10">
                            <input type="text" required class=" form-control" name="LastName" pattern="^[a-zA-Z]+$" title="Only alphabet allow" value="@Model.LastName" id="lName" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2" for="profilePic">Profile Picture</label>
                        <div class="col-sm-10">
                            <input type="file" required class="form-control" name="ImageFile" id="profilePic" />
                        </div>
                    </div>
                    <div class="form-group row">
                        <label class="col-md-2" for="email">Email</label>
                        <div class="col-sm-10">
                            <input type="text" required class=" form-control" name="Email" value="@Model.Email" id="email" />
                        </div>
                    </div>
                    <div class="form-group row button-container">
                        <button type="submit" class="btn btn-primary">Update</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>



@section Scripts
    {

}
